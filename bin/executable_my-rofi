#!/usr/bin/env bash

export FZF_DEFAULT_OPTS='
  --height="100%"
  --layout=reverse
  --margin=0
  --padding=0
  --color=bg+:#303446,bg:#202c3d,spinner:#f2d5cf,hl:#e78284
  --color=fg:#c6d0f5,header:#e78284,info:#ca9ee6,pointer:#f2d5cf
  --color=marker:#f2d5cf,fg+:#c6d0f5,prompt:#ca9ee6,hl+:#e78284
'

FOOT_OPTIONS=''

if [[ -z "$1" ]]
then
  FZF_DEFAULT_OPTS="--prompt='ü¶Ñ '${FZF_DEFAULT_OPTS}"
  COMMAND=~/bin/launcher-run
elif [[ "$1" == "bookmarks" ]]
then
  FZF_DEFAULT_OPTS="--prompt='üîñ '${FZF_DEFAULT_OPTS}"
  COMMAND=~/bin/launcher-bookmarks
  FOOT_OPTIONS="-W 120x40 ${FOOT_OPTIONS}"
elif [[ "$1" == "documents" ]]
then
  FZF_DEFAULT_OPTS="--prompt='f '${FZF_DEFAULT_OPTS}"
  COMMAND=~/bin/launcher-folder
  FOOT_OPTIONS="-W 120x40 ${FOOT_OPTIONS}"
elif [[ "$1" == "clipboard" ]]
then
  FZF_DEFAULT_OPTS="--prompt='üìã ' --algo=v1 --bind 'tab:up' ${FZF_DEFAULT_OPTS}"
  FOOT_OPTIONS="-W 190x30 ${FOOT_OPTIONS}"
  COMMAND=~/bin/launcher-clipboard
elif [[ "$1" == "gopass" ]]
then
  FZF_DEFAULT_OPTS="--prompt='üîë ' --algo=v1 --bind 'tab:up' ${FZF_DEFAULT_OPTS}"
  COMMAND=~/bin/launcher-gopass
elif [[ "$1" == "snippets" ]]
then
  FZF_DEFAULT_OPTS="--prompt='üìã'${FZF_DEFAULT_OPTS}"
  COMMAND=~/bin/launcher-snippets
elif [[ "$1" == "qutebrowser" ]]
then
  FZF_DEFAULT_OPTS="--prompt='üåê'${FZF_DEFAULT_OPTS}"
  FOOT_OPTIONS="-W 250x40 ${FOOT_OPTIONS}"
  COMMAND=~/bin/launcher-qutebrowser
elif [[ "$1" == "zoxide" ]]
then
  FOOT_OPTIONS="-W 160x30 ${FOOT_OPTIONS}"
  FZF_DEFAULT_OPTS="--prompt='ÓØà ' --algo=v1 --bind 'tab:up' ${FZF_DEFAULT_OPTS}"
  COMMAND=~/bin/launcher-zoxide
elif [[ "$1" == "k8s" ]]
then
  FZF_DEFAULT_OPTS="--prompt='Û±Éæ ' --algo=v1 --bind 'tab:up' ${FZF_DEFAULT_OPTS}"
  COMMAND=~/bin/launcher-k8s
elif [[ "$1" == "calc" ]]
then
  FOOT_OPTIONS="-W 120x40 ${FOOT_OPTIONS}"
  FZF_DEFAULT_OPTS="--prompt='üßÆ '${FZF_DEFAULT_OPTS}"
  COMMAND=~/bin/iqalc
else
  exec foot --app-id launcher --config ~/.config/foot/foot-launcher.ini ~/bin/launcher-run
fi;
exec foot --app-id launcher ${FOOT_OPTIONS} --config ~/.config/foot/foot-launcher.ini "$COMMAND"
