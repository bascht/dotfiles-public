function fzf-vm () {
    local selected_vm=$(grep "Host " ~/.ssh/config | grep -oP "vm-(\w+)" | sort -u | cut -b 4- | fzf --reverse --height=20 --query "$LBUFFER")
    if [ -n "$selected_vm" ]; then
        BUFFER="vm ${selected_vm} ''"
        zle accept-line
    fi
    zle reset-prompt
}
