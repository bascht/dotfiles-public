#!/usr/bin/env ruby
# - encoding: utf-8 -
require 'json'

unread = File.read("#{Dir.home}/Mail/unread_messages")
m = JSON.parse(unread)

# Display a random subject from unread messages
if m.count > 0
  index = Time.now.strftime("%S").to_i / (60 / m.count)
  puts "#{index + 1} / #{m.count} [#{m[index]['subject']}]"
  exit(33)
end

# Just be enjoy our empty INBOX.
puts "ï‚‡"
exit(0)
