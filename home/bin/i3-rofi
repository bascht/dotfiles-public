#!/bin/bash

if pgrep polybar
then
    WINDOWED=""
else
    WINDOWED="-fullscreen -normal-window"
fi
    
rofi --markup -ssh-command 'urxvt256c-ml -e "ssh {host}"' -levenshtein-sort -modi 'combi,ssh,files:~/bin/rofi-file-browser.sh,emoji:~/bin/rofi-moji' -combi-modi 'run,window' -show combi -terminal urxvt256c-ml -bw 10 $WINDOWED
