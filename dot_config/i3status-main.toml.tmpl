icons = "awesome6"

[theme]
name = "plain"

[theme.overrides]
{{- if (eq .chezmoi.hostname "apfelstrudel") }}
idle_bg = "#2E3440"
good_bg = "#2E3440"
warning_bg = "#81A1C1"
critical_bg = "#88C0D0"
separator_bg = "#2E3440"
separator_fg = "#434C5E"
{{- else }}
idle_bg = "#181818"
good_bg = "#181818"
warning_bg = "#81A1C1"
critical_bg = "#88C0D0"
separator_bg = "#181818"
separator_fg = "#434C5E"
{{- end }}

[[block]]
block = "custom"
command = '/home/bascht/bin/homeassistant-co2-office'
interval = 60

[[block]]
block = "custom"
command = '/home/bascht/bin/org-get-current-clock-task'
interval = 10
on_click = "em -c -e '(org-clock-goto)'"

[[block]]
block = "sound"

[[block]]
block = "music"
buttons = ["play", "next"]
on_collapsed_click = "foot ncmpcpp"
marquee = false
max_width = 10
player = ["org.mpris.MediaPlayer2.mopidy"]

[[block]]
block = "load"
interval = 10
format = "{1m}"
warning = 2
critical = 4
[block.theme_overrides]
warning_fg = "#813e00"
critical_fg = "#a60000"

[[block]]
block = "memory"
display_type = "memory"
format_mem = "{mem_used_percents}"
format_swap = "{swap_used_percents}"

[[block]]
block = "net"
device = "ethernet"
hide_inactive = true
format = ""
format_alt = "{speed_down} {speed_up}"

[[block]]
block = "net"
device = "wifi"
hide_inactive = true
format = "{ssid} {signal_strength}"
format_alt = "{speed_down} {speed_up}"
on_click = "wpa_gui"

[[block]]
block = "toggle"
text = ""
command_state = "alfaview-screenshare status"
command_on = "alfaview-screenshare start"
command_off = "alfaview-screenshare stop"
interval = 10

[[block]]
block = "backlight"
{{- if or (eq .chezmoi.hostname "kandalingo") }}
device = "intel_backlight"
{{- end }}

[[block]]
block = "battery"
driver = "upower"
format = "{percentage} {time}"

[[block]]
block = "time"
interval = 10
format = "(u%R)"
timezone = "UTC"

[[block]]
block = "time"
interval = 10
format = "%a %d.%m. %R"
timezone = "Europe/Berlin"
